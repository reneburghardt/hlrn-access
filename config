Host hlrn-*
    User <user>
    IdentityFile <path_to_your_private_key>
    RequestTTY force
    Port 22
    ProxyCommand ssh $(echo %h | cut -d- -f1) nc $(echo %h | cut -d- -f2) %p
    RemoteCommand module load singularity; singularity shell instance://example_instance  